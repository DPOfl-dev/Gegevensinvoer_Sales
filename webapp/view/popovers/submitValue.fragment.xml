<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="Please provide a value" class="sapUiContentPadding" placement="Bottom">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="saveBttn" text="Save value" press="onSaveFieldValue"/>
			</Toolbar>
		</footer>
		<VBox>
			<Text text="Please provide a value for field {/d/Field} :"/>
			<Input type="Text" value="{/d/FieldValue}" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
				maxLength="0"/>
		</VBox>
	</Popover>
</core:FragmentDefinition>